<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper">

    <!-- 게시글 목록 조회 -->
    <select id="selectBoardList" parameterType="String" resultType="com.cs.workdream.board.model.vo.Board">
        SELECT * FROM POSTING
        <if test="category != null and category != '' and category != '전체글'">
            WHERE CATEGORY = #{category}
        </if>
        ORDER BY CREATED_TIME DESC
    </select>

    <!-- 게시글 상세 조회 -->
    <select id="selectBoard" parameterType="int" resultType="com.cs.workdream.board.model.vo.Board">
        SELECT * FROM POSTING WHERE POSTING_NO = #{boardNo}
    </select>

    <!-- 게시글 등록 -->
    <insert id="insertBoard" parameterType="com.cs.workdream.board.model.vo.Board" useGeneratedKeys="true" keyProperty="boardNo">
        INSERT INTO POSTING (POSTING_NO, CATEGORY, TITLE, CONTENT, AUTHOR, USER_NO, CREATED_TIME, VIEW_COUNT, LIKE_COUNT)
        VALUES (SEQ_PNO.NEXTVAL, #{category}, #{title}, #{content}, #{author}, #{userNo}, SYSDATE, 0, 0)
    </insert>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="com.cs.workdream.board.model.vo.Board">
        UPDATE POSTING
        SET CATEGORY = #{category},
            TITLE = #{title},
            CONTENT = #{content},
            UPDATED_TIME = SYSDATE
        WHERE POSTING_NO = #{boardNo}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        DELETE FROM POSTING WHERE POSTING_NO = #{boardNo}
    </delete>

    <!-- 조회수 증가 -->
    <update id="increaseViewCount" parameterType="int">
        UPDATE POSTING SET VIEW_COUNT = VIEW_COUNT + 1 WHERE POSTING_NO = #{boardNo}
    </update>

    <!-- 인기 게시글 조회 (예시: 조회수 상위 5개) -->
    <select id="selectPopularBoards" resultType="com.cs.workdream.board.model.vo.Board">
        SELECT * FROM POSTING ORDER BY VIEW_COUNT DESC FETCH FIRST 5 ROWS ONLY
    </select>

    <!-- 전체 게시글 수 조회 -->
    <select id="selectBoardCount" resultType="int">
        SELECT COUNT(*) FROM POSTING
    </select>

    <!-- 마지막 삽입된 ID 가져오기 (필요 시) -->
    <select id="getLastInsertId" resultType="int">
        SELECT SEQ_PNO.CURRVAL FROM DUAL
    </select>

</mapper>