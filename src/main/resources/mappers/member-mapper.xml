<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMapper">

	<resultMap type="Member" id="memberResultSet">
		<result column="USER_NO" property="userNo" />
		<result column="USER_TYPE" property="userType" />
		<result column="USER_ID" property="userId" />
		<result column="USER_PWD" property="userPwd" />
		<result column="ENAIL" property="email" />
		<result column="ENROLL_DATE" property="enrollDate" />
		<result column="MODIFY_DATE" property="modifyDate" />
		<result column="STATUS" property="status" />
		<result column="BUSINESS_NO" property="businessNo" />
		<result column="PERSON_NO" property="personNo" />
	</resultMap>
	
	<!-- 로그인 -->
	<select id="loginMember" parameterType="Member" resultMap="memberResultSet">
		SELECT	USER_NO,
				USER_TYPE,
				USER_ID,
				USER_PWD
		  FROM	MEMBER
		 WHERE	USER_ID = #{userId}
		   AND	USER_PWD = #{userPwd}
		   AND	USER_TYPE = #{userType}
		   AND	STATUS = 'Y'
	</select>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" parameterType="String" resultType="int">
		SELECT	COUNT(*)
		  FROM	MEMBER
		 WHERE	USER_ID = #{checkId}
	</select>
	
	<!-- 신규 회원 등록 (기업) -->
	<insert id="insertBusiness" parameterType="Member" useGeneratedKeys="true" keyProperty="businessNo">
		INSERT	INTO BUSINESS (
			BUSINESS_NO,
			REGISTRATION_NUMBER
		) VALUES (
			SEQ_BNO.NEXTVAL,
			#{registraionNumber}
		);
	</insert>
	
	<!-- 신규 회원 등록 (개인) -->
	<insert id="insertPerson" parameterType="Member" useGeneratedKeys="true" keyProperty="personNo">
		INSERT INTO PERSON (
			PERSON_NO,
		) VALUES (
			SEQ_PNO.NEXTVAL,
		)
	</insert>
	
	<!-- 신규 회원 등록 (통합) -->
	<insert id="insertMember" parameterType="Member">
		INSERT	INTO MEMBER (
			USER_NO,
			USER_TYPE,
			USER_ID,
			USER_PWD,
			EMAIL,
			PHONE,
			EROLL_DATE,
			STATUS,
			BUSONESS_NO,
			PERSON_NO
		) VALUES (
			SEQ_UNO.NEXTVAL,
			'B',
			#{userId},
			#{userPwd},
			#{email},
			#{phone},
			SYSDATE,
			'Y',
			<choose>
	            <when test="userType == 'B'">
	            	<!-- 기업 회원의 경우 -->
	                #{businessNo},
	                NULL
	            </when>
	            <when test="userType == 'P'">
	            	<!-- 개인 회원의 경우 -->
	            	NULL,
	                #{personNo}
	            </when>
	        </choose>
		);
	</insert>
</mapper>